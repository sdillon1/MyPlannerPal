<?xml version="1.0" encoding="utf-8"?>
<manifest package="sean21eric.myplannerpal"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".HomeScreen"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".AddEvent"
            android:label="@string/title_activity_add_event"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".Alarm_Activity"
            android:label="@string/title_activity_alarm_"
            android:parentActivityName=".HomeScreen"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="sean21eric.myplannerpal.HomeScreen"/>
        </activity>

        <receiver
            android:name=".MyReceiver1"
            android:enabled="true"
            android:exported="true">
        </receiver>

        <activity
            android:name=".FullscreenAlarm"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_fullscreen_alarm"
            android:theme="@style/FullscreenTheme">
        </activity>
    </application>

</manifest>
